<p id="notice"><%= notice %></p>

<h1>Citizens</h1>

<table>
  <thead>
    <tr>
      <th>Dni</th>
      <th>Primer apellido</th>
      <th>Segundo apellido</th>
      <th>Prenombres</th>
      <th>Sexo</th>
      <th>Estado civil</th>
      <th>Nacimiento</th>
      <th>Foto</th>
      <th>Sele1</th>
      <th>Sele2</th>
      <th>Sele3</th>
      <th>Sele4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @citizens.each do |citizen| %>
      <tr>
        <td><%= citizen.dni %></td>
        <td><%= citizen.primer_apellido %></td>
        <td><%= citizen.segundo_apellido %></td>
        <td><%= citizen.prenombres %></td>
        <td><%= citizen.sexo %></td>
        <td><%= citizen.estado_civil %></td>
        <td><%= citizen.nacimiento %></td>
        <td><%= citizen.foto %></td>
        <td><%= citizen.sele1 %></td>
        <td><%= citizen.sele2 %></td>
        <td><%= citizen.sele3 %></td>
        <td><%= citizen.sele4 %></td>
        <td><%= link_to 'Show', citizen %></td>
        <td><%= link_to 'Edit', edit_citizen_path(citizen) %></td>
        <td><%= link_to 'Destroy', citizen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

